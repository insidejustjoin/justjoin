# 面接システム環境変数設定

# ===== 基本設定 =====
NODE_ENV=development
PORT=3002

# ===== データベース設定 =====
# ローカル開発用（メインプラットフォームと同じデータベース）
DATABASE_URL="postgresql://postgres:justjoin2024@localhost:5432/justjoin"

# 本番環境用（Cloud SQL）
# DATABASE_URL="postgresql://postgres:justjoin2024@/justjoin?host=/cloudsql/justjoin-platform:asia-northeast1:justjoin-enterprise"

# ===== Google Cloud Platform 設定 =====
GOOGLE_CLOUD_PROJECT_ID="justjoin-platform"
GOOGLE_CLOUD_STORAGE_BUCKET="justjoin-platform-match-job-documents"

# Google Cloud 認証（ローカル開発時）
# GOOGLE_APPLICATION_CREDENTIALS="./google-credentials.json"

# ===== Gemini AI API 設定 =====
VITE_GEMINI_API_KEY="your-gemini-api-key-here"

# ===== セキュリティ設定 =====
JWT_SECRET="justjoin-jwt-secret-2024"
SESSION_SECRET="justjoin-session-secret-2024"

# ===== CORS設定 =====
# ローカル開発用
CORS_ORIGIN="http://localhost:3001"

# 本番環境用
# CORS_ORIGIN="https://interview.justjoin.jp,https://justjoin.jp"

# ===== ログ設定 =====
LOG_LEVEL="info"
LOG_FORMAT="combined"

# ===== 面接システム固有設定 =====
# 面接制限時間（秒）
MAX_INTERVIEW_DURATION=1800

# 質問制限時間（秒）
MAX_QUESTION_TIMEOUT=600

# 最大回答文字数
MAX_ANSWER_LENGTH=1000

# デフォルト言語
DEFAULT_LANGUAGE="ja"

# ===== メール設定（通知用） =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="inside.justjoin@gmail.com"
SMTP_PASS="your-app-password"
ADMIN_EMAIL="admin@justjoin.jp"

# ===== Redis設定（セッション管理・将来の拡張用） =====
# REDIS_URL="redis://localhost:6379"

# ===== 外部API設定（将来の拡張用） =====
# OpenAI API（より高度なAI面接官用）
# OPENAI_API_KEY="sk-your-openai-api-key"

# Google Cloud Speech API（音声入力用）
# GOOGLE_CLOUD_SPEECH_API_KEY="your-speech-api-key"

# ===== 監視・分析設定 =====
# Google Analytics（本番環境用）
# GA_TRACKING_ID="G-YOUR-TRACKING-ID"

# Sentry（エラー監視用）
# SENTRY_DSN="https://your-sentry-dsn"

# ===== 開発用設定 =====
# デバッグログ有効化
DEBUG="interview:*"

# 開発用モック設定
MOCK_DATABASE=false
MOCK_GCP_SERVICES=false 