# GCP環境変数設定例 - justjoin.jp用
# このファイルを.env.gcpにコピーして実際の値を設定してください

# GCP Cloud SQL設定
DATABASE_URL="postgresql://postgres:justjoin2024@/postgres?host=/cloudsql/justjoin-platform:asia-northeast1:justjoin"

# GCP Cloud Storage設定
GOOGLE_CLOUD_PROJECT_ID="justjoin-platform"
GOOGLE_CLOUD_STORAGE_BUCKET="justjoin-platform-match-job-documents"
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# メール送信サービス設定
EMAIL_SERVICE=gmail
GMAIL_USER=inside.justjoin@gmail.com
GMAIL_PASSWORD=your_app_password_here

# 管理者メールアドレス
ADMIN_EMAIL=admin@justjoin.jp

# Google OAuth 2.0設定
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://justjoin.jp/auth/google/callback"

# Server Configuration
PORT=8080
NODE_ENV="production"

# Security
JWT_SECRET="justjoin-jwt-secret-2024"
SESSION_SECRET="justjoin-session-secret-2024"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# ドメイン設定
DOMAIN="justjoin.jp"
BASE_URL="https://justjoin.jp" 

# SSL設定（Cloud Runで自動管理）
SSL_CA=""
SSL_KEY=""
SSL_CERT=""

# データベース接続設定
DB_HOST="/cloudsql/justjoin-platform:asia-northeast1:justjoin"
DB_PORT=5432
DB_NAME="postgres"
DB_USER="postgres"
DB_PASSWORD="justjoin2024"

# Cloud Run設定
CLOUD_RUN_SERVICE_NAME="justjoin"
CLOUD_RUN_REGION="asia-northeast1" 